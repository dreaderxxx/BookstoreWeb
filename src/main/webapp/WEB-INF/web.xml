<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>BookstoreWeb</display-name>
  <servlet>
    <servlet-name>HelloWorldServlet</servlet-name>
    <servlet-class>com.example.hello.HelloWorldServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloWorldServlet</servlet-name>
    <url-pattern>/HelloWorldServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BookDetailsServlet</servlet-name>
    <servlet-class>com.example.book.servlet.BookDetailsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookDetailsServlet</servlet-name>
    <url-pattern>/details</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BookCatalogServlet</servlet-name>
    <servlet-class>com.example.book.servlet.BookCatalogServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookCatalogServlet</servlet-name>
    <url-pattern>/catalog</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BookEdit2Servlet</servlet-name>
    <servlet-class>com.example.book.servlet.BookEdit2Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookEdit2Servlet</servlet-name>
    <url-pattern>/edit2</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BookEdit1Servlet</servlet-name>
    <servlet-class>com.example.book.servlet.BookEdit1Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookEdit1Servlet</servlet-name>
    <url-pattern>/edit1</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddToCartServlet</servlet-name>
    <servlet-class>com.example.book.servlet.AddToCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddToCartServlet</servlet-name>
    <url-pattern>/addToCart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.example.book.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <filter>
  	<filter-name>CountFilter</filter-name>
  	<filter-class>com.example.book.filter.CountFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CountFilter</filter-name>
  	<url-pattern>/addToCart</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.example.book.web.BookstoreListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.example.book.web.VisitorListener</listener-class>
  </listener>
  <login-config>
      <auth-method>BASIC</auth-method>
      <realm-name>MyRealm</realm-name>
  </login-config>
  <security-role>
	<description>Saler</description>
	<role-name>saler</role-name>
  </security-role>
  <security-constraint>
  	<web-resource-collection>
	    <web-resource-name>SecuredResources</web-resource-name>
	    <url-pattern>/secured/*</url-pattern>
	</web-resource-collection>
	<auth-constraint>
    	<role-name>saler</role-name>
  	</auth-constraint>
  </security-constraint>

  <welcome-file-list>
    <welcome-file>UserLogin.html</welcome-file>
  </welcome-file-list>
</web-app>